// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String    @id
  name    String
  folders Folder[]
  textDoc TextDoc[]
}

model Folder {
  id      String    @id @default(uuid())
  name    String
  user    User      @relation(fields: [userId], references: [id])
  userId  String
  textDoc TextDoc[]
}

model TextDoc {
  id        String    @id @default(uuid())
  title     String
  tags      TextTag[]
  text      String    @db.Text
  createdAt DateTime  @default(now())
  folder    Folder[]
  pdfs      Pdf[]
  author    User      @relation(fields: [userId], references: [id])
  userId    String
}

model TextTag {
  id        String  @id @default(uuid())
  title     String
  textDoc   TextDoc @relation(fields: [textDocId], references: [id])
  textDocId String
}

model Pdf {
  id          String   @id @default(uuid())
  name        String
  location    String
  initialPage String?
  textDoc     TextDoc? @relation(fields: [textDocId], references: [id])
  textDocId   String?
}
